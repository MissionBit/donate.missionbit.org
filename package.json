{
  "name": "donate-missionbit-org",
  "version": "1.0.0",
  "description": "Mission Bit's donation portal",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "export": "npm run build && next export",
    "start": "next start",
    "fix": "eslint --fix --ext js,jsx,ts,tsx .",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "eslint --ext js,jsx,ts,tsx .",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "postinstall": "husky install",
    "tsx": "NODE_OPTIONS='--import tsx -r dotenv/config' node",
    "cron": "export NODE_OPTIONS='--import tsx -r dotenv/config' && node scripts/givebutter.ts && node scripts/givebutter-slack.ts && node scripts/givebutter-salesforce.ts",
    "cron-cache": "export NODE_OPTIONS='--import tsx -r dotenv/config' && node scripts/cache-google.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/missionbit/donate.missionbit.org.git"
  },
  "keywords": [],
  "author": "Mission Bit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/missionbit/donate.missionbit.org/issues"
  },
  "homepage": "https://github.com/missionbit/donate.missionbit.org#readme",
  "dependencies": {
    "@effect/platform": "^0.31.1",
    "@effect/schema": "^0.49.4",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@sendgrid/mail": "^7.2.5",
    "@sentry/browser": "^7.77.0",
    "@slack/web-api": "^6.7.2",
    "@stripe/react-stripe-js": "^1.6.0",
    "@stripe/stripe-js": "^1.21.2",
    "@types/micro": "^7.3.3",
    "@types/micro-cors": "^0.1.1",
    "another-name-parser": "^0.0.9",
    "clsx": "^1.1.1",
    "cross-fetch": "^3.0.6",
    "dayjs": "^1.8.35",
    "effect": "^2.0.0-next.56",
    "fast-check": "^3.14.0",
    "material-ui-popup-state": "^1.7.1",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "mjml": "^4.6.3",
    "mjml-react": "^2.0.0",
    "next": "^12.3.4",
    "query-string": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "responsive-loader": "^2.1.1",
    "smoothscroll-polyfill": "^0.4.4",
    "stripe": "^14.5.0",
    "ts-debounce": "^3.0.0",
    "us": "^2.0.0",
    "use-elapsed-time": "^3.0.2",
    "webp-loader": "^0.6.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^4.41.2",
    "@next/eslint-plugin-next": "^11.1.2",
    "@supabase/supabase-js": "^2.38.5",
    "@types/eslint": "^8.44.7",
    "@types/google.analytics": "^0.0.42",
    "@types/gtag.js": "^0.0.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.5",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "critters": "^0.0.20",
    "cross-env": "^7.0.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^11.1.2",
    "prettier": "^3.1.0",
    "sass": "^1.69.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2"
  },
  "resolutions": {
    "@types/eslint": "8.4.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
