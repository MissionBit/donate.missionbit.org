{
  "name": "donate-missionbit-org",
  "version": "1.0.0",
  "description": "Mission Bit's donation portal",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "export": "npm run build && next export",
    "start": "next start",
    "fix": "eslint --fix --ext js,jsx,ts,tsx .",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "eslint --ext js,jsx,ts,tsx .",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "postinstall": "husky install",
    "tsx": "NODE_OPTIONS='--import tsx -r dotenv/config' node",
    "cron": "export NODE_OPTIONS='--import tsx -r dotenv/config' && node scripts/givebutter.ts && node scripts/givebutter-slack.ts && node scripts/givebutter-salesforce.ts",
    "cron-cache": "export NODE_OPTIONS='--import tsx -r dotenv/config' && node scripts/cache-google.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/missionbit/donate.missionbit.org.git"
  },
  "keywords": [],
  "author": "Mission Bit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/missionbit/donate.missionbit.org/issues"
  },
  "homepage": "https://github.com/missionbit/donate.missionbit.org#readme",
  "dependencies": {
    "@effect/platform": "^0.32.2",
    "@effect/schema": "^0.51.1",
    "@headlessui/react": "^1.7.17",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/browser": "^7.84.0",
    "@slack/web-api": "^6.10.0",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.2.0",
    "@types/micro": "^7.3.7",
    "@types/micro-cors": "^0.1.5",
    "another-name-parser": "^0.1.0",
    "clsx": "^2.0.0",
    "cross-fetch": "^4.0.0",
    "dayjs": "^1.11.10",
    "effect": "^2.0.0-next.58",
    "eslint-config-next": "^14.0.3",
    "fast-check": "^3.14.0",
    "micro": "^10.0.1",
    "micro-cors": "^0.1.1",
    "next": "^14.0.3",
    "query-string": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "smoothscroll-polyfill": "^0.4.4",
    "stripe": "^14.7.0",
    "us": "^2.0.0",
    "use-elapsed-time": "^3.0.4"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^4.41.2",
    "@next/eslint-plugin-next": "^14.0.3",
    "@supabase/supabase-js": "^2.39.0",
    "@types/eslint": "^8.44.8",
    "@types/google.analytics": "^0.0.45",
    "@types/gtag.js": "^0.0.18",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.2",
    "@types/react": "^18.2.41",
    "@types/smoothscroll-polyfill": "^0.3.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "critters": "^0.0.20",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "resolutions": {
    "@types/eslint": "8.4.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
